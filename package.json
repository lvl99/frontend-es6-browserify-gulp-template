{
  "name": "frontend-es6-browserify-gulp-template",
  "version": "0.1.0",
  "description": "A basic build template for frontend JS apps",
  "main": "gulpfile.js",
  "scripts": {
    "test": "jest",
    "build": "gulp build",
    "build:development": "gulp build:development",
    "build:staging": "gulp build:staging",
    "build:production": "gulp build:production",
    "serve": "gulp serve",
    "serve:development": "gulp serve:development",
    "serve:staging": "gulp serve:staging",
    "serve:production": "gulp serve:production"
  },
  "author": "Matt Scheurich <matt@blacksmith.studio>",
  "license": "MIT",
  "dependencies": {
    "@fancyapps/fancybox": "^3.0.48",
    "normalize.css": "^7.0.0",
    "swiper": "^3.4.2"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.11",
    "browserify": "^14.3.0",
    "browserify-shim": "^3.8.14",
    "browsersync": "0.0.1-security",
    "chalk": "^1.1.3",
    "del": "^2.2.2",
    "extend": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-less": "^3.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-streamify": "^1.0.2",
    "gulp-uglify": "^2.1.2",
    "gulp-uglifycss": "^1.0.8",
    "gulp-util": "^3.0.8",
    "jest-cli": "^20.0.3",
    "lazypipe": "^1.0.1",
    "lodash.escaperegexp": "^4.1.2",
    "object-path": "^0.11.4",
    "pkgify": "^1.1.0",
    "remapify": "^2.1.0",
    "run-sequence": "^1.2.2",
    "streamify": "^0.2.8",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "ignore": [
      "*.js",
      "*.min.js"
    ]
  },
  "browser": {
    "@app": "./src/js/app.es6"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery"
  },
  "transform": [
    [
      "babelify",
      {
        "comments": false
      }
    ]
  ],
  "pkgify": {
    "packages": {
      "@app": "./src/js"
    }
  },
 "jest": {
    "browser": true,
    "moduleFileExtensions": ["js", "es6", "jsx"],
    "testMatch": [
      "**/__tests__/**/*.(jsx?|es6)",
      "**/?(*.)(spec|test).(jsx?|es6)",
      "<rootDir>/tests/**/*.(jsx?|es6)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/bower_components/"
    ],
    "transform": {
      "^.+\\.es6?$": "babel-jest"
    },
    "verbose": true
  },
  "gulpConfig": {
    "vendors": {
      "dest": "./build/vendors",
      "vendors": {
        "swiper": {
          "src": [
            "./node_modules/swiper/dist/css/swiper.min.css",
            "./node_modules/swiper/dist/js/swiper.jquery.min.js"
          ],
          "dest": "./build/vendors/swiper"
        },
        "fancybox": {
          "src": [
            "./node_modules/@fancyapps/fancybox/dist/jquery.fancybox.min.{js,css}"
          ],
          "dest": "./build/vendors/fancybox"
        }
      }
    },
    "browserify": {
      "bundles": {
        "app": {
          "src": "./src/js/app.es6",
          "dest": "./build/js/bundled.app.js"
        }
      }
    }
  }
}
